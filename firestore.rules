rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Allow read access to daily_items collection and all subcollections (public game data)
    match /daily_items/{date} {
      allow read: if true;  // Anyone can read game items
      allow write: if false; // Only functions can write
      
      // Allow access to categories subcollection
      match /categories/{category} {
        allow read: if true;  // Anyone can read game items
        allow write: if false; // Only functions can write
      }
    }
    
    // Deny access to all other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 